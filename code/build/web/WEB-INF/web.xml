<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file> trang-chu </welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>Forward.Contact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/lien-he</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Forward.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/dang-nhap</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Forward.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/dang-ky</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>aboutus</servlet-name>
        <servlet-class>Forward.AboutUs</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>aboutus</servlet-name>
        <url-pattern>/gioi-thieu</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>faq</servlet-name>
        <servlet-class>Forward.FAQ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>faq</servlet-name>
        <url-pattern>/cau-hoi-thuong-gap</url-pattern>
    </servlet-mapping>
    
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
